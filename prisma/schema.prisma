// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  point    Int    @default(0)
  nickname String
}

model Admin {
  id        Int    @id @default(autoincrement())
  email     String @unique
  password  String
  adminName String
}

model Project {
  id       Int    @id @default(autoincrement())
  title    String
  contents String
  tabs     Tab[]
  image    Image? @relation(fields: [imageId], references: [id])
  imageId  Int?
}

model Tab {
  id        Int      @id @default(autoincrement())
  title     String
  type      String
  Project   Project? @relation(fields: [projectId], references: [id])
  projectId Int?
}

model Image {
  id        Int       @id @default(autoincrement())
  url       String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt()
  key       String
  Project   Project[]
}
